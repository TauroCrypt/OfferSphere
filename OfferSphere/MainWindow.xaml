<Window x:Class="OfferSphere.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OfferSphere"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="37*"/>
            <ColumnDefinition Width="163*"/>
        </Grid.ColumnDefinitions>

        <Canvas Name ="view_sidebar"  Grid.Column="0" Background="LightGray">
            <StackPanel VerticalAlignment="Top" Margin="10">
                <Button Name="btn_Customer" Content="Kunden" Margin="0,5"/>
                <Button Name ="btn_Service" Content="Dienstleistungskatalog" Margin="0,5"/>
                <Button Name ="btn_Offer" Content="Angebote" Margin="0,5"/>
                <Button Name ="btn_Invoice" Content="Rechnungen" Margin="0,5"/>
            </StackPanel>
        </Canvas>
        <Canvas Name="view_MainView" Grid.Column="1" HorizontalAlignment="Center" Height="434" VerticalAlignment="Center" Width="652"/>
        
    </Grid>
</Window>
