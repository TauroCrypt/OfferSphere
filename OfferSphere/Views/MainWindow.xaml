<Window x:Class="OfferSphere.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="450" Width="800">

    <Grid>
        <!-- Rows: Header + Main Content -->
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Columns: Sidebar + Content -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Grid.ColumnSpan="2"
                Background="#1F2937"
                Padding="10"
                CornerRadius="0,0,10,10">
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="8" Opacity="0.3" Direction="270" ShadowDepth="2"/>
            </Border.Effect>

            <DockPanel VerticalAlignment="Center">

                <!-- Logo and App Name -->
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left" VerticalAlignment="Center">
                    <Image Source="/OfferSphere;component/Resources/LogoOfferSphere.png"
                           Height="35"
                           Margin="0,0,10,0"/>
                    <TextBlock Text="OfferSphere"
                               Foreground="White"
                               FontSize="20"
                               FontWeight="Bold"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Right-side buttons -->
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" HorizontalAlignment="Right" VerticalAlignment="Center" Cursor="">
                    <!-- Help Button -->
                    <Button Name="btn_help" Width="30" Height="30" Background="#374151" BorderThickness="0" Cursor="Hand" Margin="0,0,5,0">
                        <Image Source="/OfferSphere;component/Resources/info_471662.png" />
                    </Button>

                    <!-- Settings Button -->
                    <Button Name="btn_setting" Width="30" Height="30" Background="#374151" BorderThickness="0" Cursor="Hand">
                        <Image Source="/OfferSphere;component/Resources/gear_1160356.png" />
                    </Button>
                </StackPanel>

            </DockPanel>
        </Border>

        <!-- Sidebar -->
        <Border Grid.Row="1" Grid.Column="0" Background="#F3F4F6" Padding="10">
            <StackPanel x:Name="SidebarMenu">
                <Button Content="Kunden"
                        Style="{StaticResource MenuButtonStyle}"
                        Command="{Binding ShowCustomersCommand}"/>
                <Button Content="Leistungskatalog"
                        Style="{StaticResource MenuButtonStyle}"
                        Command="{Binding ShowServicesCommand}"/>
                <Button Content="Angebote"
                        Style="{StaticResource MenuButtonStyle}"
                        Command="{Binding ShowQuotesCommand}"/>
                <Button Content="Rechnungen"
                        Style="{StaticResource MenuButtonStyle}"
                        Command="{Binding ShowInvoicesCommand}"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Frame x:Name="MainFrame"
               Grid.Row="1"
               Grid.Column="1"
               NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>